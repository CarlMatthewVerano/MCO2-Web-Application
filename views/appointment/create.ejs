<div class="container-fluid d-flex flex-column flex-wrap justify-content-start" style="margin: 15px 15px">
  <h1 class="text-center">Create Appointment</h1>
  <div class="container w-50 p-2">
    <form class="row g-3" action="/create" method="POST">
      <!-- px_id -->
      <div class="col-12">
        <label for="appt_id">Appointment ID</label>
        <input type="text" class="form-control" id="appt_id" placeholder="Enter Appointment ID" name="appt_id" />
      </div>

      <!-- appt_status -->
      <div class="col-12">
        <label for="appt_status">Appointment Status</label>
        <input type="text" class="form-control" id="appt_status" placeholder="Enter Appointment Status"
          name="appt_status" />
      </div>

      <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-outline-success w-25">Submit</button>
      </div>

    </form>
  </div>
</div>